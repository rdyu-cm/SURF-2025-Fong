anion {

  # AtomID  MolID  AtomType  charge   X       Y         Z
  write("Data Atoms") {
    $atom:Anion $mol @atom:Anion    -{ION_CHARGE}    0.00000  0.00000   0.000000
  }

  write_once("Data Masses") {
    @atom:Anion {ANION_MASS}
  }

  write_once("In Settings") {
    pair_coeff @atom:Anion @atom:Anion  {ANION_EPS} {ANION_SIGMA}
  }

}