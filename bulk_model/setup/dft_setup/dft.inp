&FORCE_EVAL
   &DFT
      BASIS_SET_FILE_NAME GTH_BASIS_SETS
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
      BASIS_SET_FILE_NAME /anvil/scratch/x-ryu3/BASIS_SETS/BASIS_MOLOPT_UZH
      POTENTIAL_FILE_NAME POTENTIAL
      &XC
       DENSITY_CUTOFF     1.0000000000000000E-10
       GRADIENT_CUTOFF     1.0000000000000000E-10
       TAU_CUTOFF     1.0000000000000000E-10
       &XC_GRID
         XC_DERIV  SPLINE2_SMOOTH
       &END XC_GRID
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE  T
           PARAMETRIZATION  REVPBE
         &END PBE
       &END XC_FUNCTIONAL
       &VDW_POTENTIAL
         POTENTIAL_TYPE  PAIR_POTENTIAL
         &PAIR_POTENTIAL
           R_CUTOFF     1.5000000000000005E+01
           TYPE  DFTD3
           PARAMETER_FILE_NAME dftd3.dat
           REFERENCE_FUNCTIONAL revPBE
           LONG_RANGE_CORRECTION  T
         &END PAIR_POTENTIAL
       &END VDW_POTENTIAL
      &END XC
      &QS
       EXTRAPOLATION USE_GUESS
       EPS_DEFAULT     9.9999999999999998E-13
       EPS_PGF_ORB     1.0000000000000000E-14
      &END QS
      &SCF
       MAX_SCF  20
       EPS_SCF     4.9999999999999998E-07
       SCF_GUESS  RESTART
       &OT  T
         MINIMIZER  DIIS
         PRECONDITIONER  FULL_ALL
       &END OT
       &OUTER_SCF  T
         EPS_SCF     4.9999999999999998E-07
         MAX_SCF  20
       &END OUTER_SCF
       &PRINT
         &RESTART  SILENT
           ADD_LAST  NUMERIC
           &EACH
             QS_SCF  0
           &END EACH
         &END RESTART
       &END PRINT
      &END SCF
      &MGRID
         CUTOFF 1200.0
         NGRIDS 5
      &END MGRID
   &END DFT
   &SUBSYS
      &TOPOLOGY
         COORD_FILE_NAME trajectory-input.xyz
         COORD_FILE_FORMAT XYZ
      &END TOPOLOGY
      &CELL
         A 19.607 0.0 0.0
         B 0.0 19.607 0.0
         C 0.0 0.0 19.607
      &END CELL
      &KIND H
       BASIS_SET TZV2P-MOLOPT-GTH-q1
       POTENTIAL GTH-PBE-q1
     &END KIND
     &KIND O
       BASIS_SET TZV2P-MOLOPT-GTH-q6
       POTENTIAL GTH-PBE-q6
     &END KIND
     &KIND Cl
       BASIS_SET TZV2P-MOLOPT-GTH-q7
       POTENTIAL GTH-PBE-q7
     &END KIND
     &KIND Na
       BASIS_SET TZV2P-MOLOPT-PBE-GTH-q9
       POTENTIAL GTH-PBE-q9
     &END KIND
     &KIND Li
       BASIS_SET TZV2P-MOLOPT-PBE-GTH-q3
       POTENTIAL GTH-PBE-q3
     &END KIND
     &KIND K
       BASIS_SET TZV2P-MOLOPT-PBE-GTH-q9
       POTENTIAL GTH-PBE-q9
     &END KIND
     &KIND N
       BASIS_SET TZV2P-MOLOPT-GTH-q5
       POTENTIAL GTH-PBE-q5
     &END KIND
     &KIND Cs
       BASIS_SET TZV2P-MOLOPT-PBE-GTH-q9
       POTENTIAL GTH-PBE-q9
     &END KIND
   &END SUBSYS
&END FORCE_EVAL
&MOTION
   &PRINT
      &FORCES
         FILENAME =forces-output.xyz
         &EACH
            MD 1
         &END EACH
      &END FORCES
   &END PRINT
   &MD
      STEPS 0
   &END MD
&END MOTION
 &GLOBAL
   PREFERRED_FFT_LIBRARY  FFTW3
   FFTW_PLAN_TYPE  MEASURE
   EXTENDED_FFT_LENGTHS T
   PRINT_LEVEL  LOW
   PROJECT_NAME ref_calc
   RUN_TYPE MD
 &END GLOBAL
